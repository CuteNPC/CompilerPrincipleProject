    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Koopa",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/compiler",
            "args": [
                "-koopa",
                "testcases/perf/19_brainfuck-calculator.c",
                "-o",
                "temp/koopa.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            // "justMyCode": false,
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Makefile"
        },
        {
            "name": "Debug Riscv",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/compiler",
            "args": [
                "-riscv",
                "testcases/lv9/11_arr_params.c",
                "-o",
                "temp/riscv.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            // "justMyCode": false,
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Makefile"
        }
    ]
}